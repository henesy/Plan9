#!/bin/rc
# Convert primitive types from posix to plan9 style
# usage: convtypes file …

rfork n

argv0 = $0
files = ()

fn usage {
	echo >[1=2] 'usage:' $argv0 'file …'
	exit 'usage'
}

if(~ $#* 0)
	usage

files = $*

# I hate this ☺
# Types which contain the names of other types must come first
subs =	(\
		uint8_t		u8int	\
		uint16_t	u16int	\
		uint32_t	u32int	\
		uint64_t	u64int	\
		int8_t		s8int	\
		int16_t		s16int	\
		int32_t		s32int	\
		int64_t		s64int	\
		size_t		usize	\
		)

fn sub {
	while(! ~ $#* 0){
		# Posix type 
		tp = $1

		shift
		
		# 9 type
		t9 = $1
		
		# Substitute
		echo $tp → $t9
		sedi 's/'^$tp^'/'^$t9^'/g' -- $files
		
		# Done
		shift
	}
}

sub $subs
